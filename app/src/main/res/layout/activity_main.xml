<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            style="@style/btn_string"
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label_back"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <TextView
            style="@style/btn_string"
            android:id="@+id/btn_donations"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label_donations"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <TextView
            style="@style/btn_string"
            android:id="@+id/btn_memebership"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label_membership"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <TextView
            style="@style/btn_string"
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label_exit"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bg"
        android:layout_below="@+id/ll_header"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:layout_above="@+id/ll_bottom_bar"/>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/bg">

        <ImageButton
            android:id="@+id/btn_profile"
            style="@style/image_btn"
            android:background="@drawable/profile"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <ImageButton
            android:id="@+id/btn_bookings"
            style="@style/image_btn"
            android:background="@drawable/bookings"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <ImageButton
            android:id="@+id/btn_live"
            style="@style/image_btn"
            android:background="@drawable/live"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <ImageButton
            android:id="@+id/btn_news"
            style="@style/image_btn"
            android:background="@drawable/news"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

        <ImageButton
            android:id="@+id/btn_church"
            style="@style/image_btn"
            android:background="@drawable/church"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="UnusedAttribute"
            />

    </LinearLayout>
</RelativeLayout>